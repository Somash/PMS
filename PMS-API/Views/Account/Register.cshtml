@model PMS_API.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<div class="container-fluid-full">
    <div class="row-fluid">
        <div class="row-fluid">
            <div class="login-box">
                <h2>Register your account</h2>
                @*<form class="form-horizontal" action="index.html" method="post">*@
                <section id="loginForm">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="input-prepend" title="Email">
                            <span class="add-on"><i class="halflings-icon user"></i></span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "input-large span10", Placeholder = "type Username" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-prepend" title="Password">
                            <span class="add-on"><i class="halflings-icon lock"></i></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "input-large span10", Placeholder = "type Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-prepend" title="ConfirmPassword">
                            <span class="add-on"><i class="halflings-icon lock"></i></span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-large span10", Placeholder = "type Confirm Password" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="button-login">
                            <input type="submit" value="Register" class="btn btn-primary">
                        </div>
                        <div class="clearfix"></div>
                    }
                </section>
                @*<hr>
                <h3></h3>*@
                <p>
                    @Html.ActionLink("Back to login", "Login")
                </p>
            </div><!--/span-->
        </div><!--/row-->
    </div><!--/.fluid-container-->
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}